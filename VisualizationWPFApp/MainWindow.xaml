<Window x:Class="VisualizationWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualizationWPFApp"
        mc:Ignorable="d"
        Title="Sztuczna Inteligencja w Grach 2019" Height="720" Width="1280">
    <Window.Background>
        <SolidColorBrush Color="AliceBlue" />
    </Window.Background>
    <Window.DataContext>
        <local:ProblemsViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.RowSpan="2" BorderThickness="1" BorderBrush="Gray" Margin="10,10,10,10" />
        <Border Grid.Column="1" BorderThickness="1" BorderBrush="Gray" Margin="10,10,10,10" />
        <Border Grid.Column="1" Grid.Row="1" BorderThickness="1" BorderBrush="Gray" Margin="10,10,10,10" />
        <TextBlock Grid.Column="1" Text="Problem:" FontSize="30" FontFamily="Candara" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,15,10,10"/>
        <ComboBox Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,70,10,10" Width="200" Height="40"
                  FontFamily="Candara" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                  ItemsSource="{Binding Problems}" SelectedValue="{Binding SelectedProblem, Mode=TwoWay}"/>
        <ContentControl Grid.Column="1" Grid.Row="1" Margin="15,15,15,15" Content="{Binding ProblemSettings}" />
    </Grid>
</Window>
