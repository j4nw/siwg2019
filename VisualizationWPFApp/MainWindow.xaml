<Window x:Class="VisualizationWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualizationWPFApp"
        xmlns:vm="clr-namespace:VisualizationWPFApp.ViewModel"
        mc:Ignorable="d"
        Title="Sztuczna Inteligencja w Grach 2019" Height="720" Width="1280">
    <Window.Background>
        <SolidColorBrush Color="AliceBlue" />
    </Window.Background>
    <Window.DataContext>
        <vm:ProblemsViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="250" />
            <RowDefinition Height="350" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.RowSpan="3" BorderThickness="1" BorderBrush="Gray" Margin="10,10,10,10" />
        <TextBlock Grid.Column="1" Text="Recent visualizations:" FontSize="25" FontFamily="Candara" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,15,10,10"/>
        <ListBox Grid.Column="1" Margin="0,60,10,10" ScrollViewer.VerticalScrollBarVisibility="Auto" />
        <TextBlock Grid.Column="1" Grid.Row="1" Text="Settings:" FontSize="25" FontFamily="Candara" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,15,10,10"/>
        <TextBox Grid.Column="1" Grid.Row="1" Text="aa" Margin="0,60,10,10" BorderBrush="Gray" BorderThickness="1" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" />
        <Button Grid.Column="1" Grid.Row="2" Content="Show/hide selected" Margin="0,0,155,60" />
        <Button Grid.Column="1" Grid.Row="2" Content="Clear" Margin="155,0,10,60" />
        <Button Grid.Column="1" Grid.Row="2" Content="Add new visualization" Margin="0,40,15,10" />
    </Grid>
</Window>
